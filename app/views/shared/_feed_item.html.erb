<tr>
  <td class="gravatar">
    <% unless feed_item.phone == feed_item.user.phone %>
      <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <% end %>
  </td>
  <td class="message">
    <span class="user">
        <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= feed_item.message %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago by <%= feed_item.from.to_i %>
    </span>
      <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: 'You sure? (this is final.)' },
                                     title: feed_item.message %> <!-- #.message? -->
  <% end %>
  </td>
</tr>